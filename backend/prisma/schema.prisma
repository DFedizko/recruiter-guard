generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  passwordHash String
  role         UserRole @default(RECRUITER)
  phone        String?
  avatarUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  jobs         Job[]
  submittedApplications Application[] @relation("ApplicationSubmittedBy")

  @@map("users")
}

model Job {
  id           String       @id @default(uuid())
  title        String
  description  String       @db.Text
  requiredSkills Json
  userId       String
  company      String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  user         User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  applications Application[]

  @@map("jobs")
}

model Candidate {
  id          String       @id @default(uuid())
  fullName    String
  email       String
  phone       String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  applications Application[]

  @@map("candidates")
}

model Application {
  id                String    @id @default(uuid())
  jobId             String
  candidateId       String
  submittedById     String?
  originalResumeText String   @db.Text
  sanitizedResumeText String  @db.Text
  extractedSkills   Json
  matchScore        Float
  status            ApplicationStatus @default(PENDING)
  notes             String?  @db.Text
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  job               Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  candidate         Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  submittedBy       User?     @relation("ApplicationSubmittedBy", fields: [submittedById], references: [id], onDelete: SetNull)

  @@map("applications")
  @@unique([jobId, submittedById])
}

enum ApplicationStatus {
  PENDING
  SHORTLISTED
  ON_HOLD
  REJECTED
}

enum UserRole {
  ADMIN
  RECRUITER
  CANDIDATE
}
